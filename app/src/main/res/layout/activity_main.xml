<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5d83c1"
    tools:context="com.example.jae.simplecalculator.MainActivity">

    <TextView
        android:id="@+id/result_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="80dp"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2sp"
        android:background="#A9A9A9"
        >

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="ACpressed"
            />
        <Button
            android:id="@+id/buttonSign"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Signpressed"
            />
        <Button
            android:id="@+id/buttonMod"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Modpressed"
            />
        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="35dp"
            android:background="#ffa500"
            android:textColor="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="Dividepressed"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2sp"
        >

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Sevenpressed"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Eightpressed"
            />
        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Ninepressed"
            />
        <Button
            android:id="@+id/buttonMult"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="x"
            android:textSize="35dp"
            android:background="#ffa500"
            android:textColor="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="Multiplicationpressed"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2sp"
        >

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Fourpressed"
            />
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Fivepressed"
            />
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Sixpressed"
            />
        <Button
            android:id="@+id/buttonSub"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="−"
            android:textSize="35dp"
            android:background="#ffa500"
            android:textColor="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="Subtractionpressed"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2sp"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Onepressed"
            />
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Twopressed"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Threepressed"
            />
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="35dp"
            android:background="#ffa500"
            android:textColor="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="Additionpressed"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2sp"
        >

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="16"
            android:text="0"
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Zeropressed"
            />
        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="35dp"
            android:background="#d3d3d3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="2sp"
            android:onClick="Decimalpressed"
            />
        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="35dp"
            android:background="#ffa500"
            android:textColor="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="Equalspressed"
            />
    </LinearLayout>






</LinearLayout>
